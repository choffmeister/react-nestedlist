{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true,
    "experimentalObjectRestSpread": true,
    "jsx": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-alert": 2,
    "no-console": 2,
    "no-multi-spaces": 2,
    "no-var": 2,
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"]
  }
}
